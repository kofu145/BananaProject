<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BananaProject.Views.EntryPage"
             xmlns:viewmodel="clr-namespace:BananaProject.ViewModels"
             xmlns:models="clr-namespace:BananaProject.Models"
             x:DataType="viewmodel:EntryViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Go to main page"
                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:EntryViewModel}}, Path=GoToMainCommand}}"
                CommandParameter="{Binding .}"
                >
                
        </Button>
    </VerticalStackLayout>
</ContentPage>