<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BananaProject.Views.CarbonPage"
             xmlns:viewmodel="clr-namespace:BananaProject.ViewModels"
             xmlns:models="clr-namespace:BananaProject.Models"
             x:DataType="viewmodel:CarbonViewModel">
    <Grid Margin="10" ColumnSpacing="15" RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto" RowSpacing="10" ColumnDefinitions="auto, *, auto">
        <Label Grid.Row="0" Grid.ColumnSpan="2" FontSize="30" HorizontalOptions="Center" Text="Carbon Footprint Calculator"></Label>
        
        <Label FontSize="15" VerticalOptions="Center" Grid.Row="1" Grid.Column="0" Text="Natural Gas:"></Label>
        <Frame VerticalOptions="Center" Grid.Row="1" Grid.Column="1" Padding="5">
            <Entry Keyboard="Numeric" x:Name="ngas" FontSize="20" Placeholder="$"></Entry>
        </Frame>
        <Label VerticalOptions="Center" Grid.Row="1" Grid.Column="2" Text="billed monthly"></Label>


        <Label FontSize="15" VerticalOptions="Center" Grid.Row="2" Grid.Column="0" Text="Electricity:"></Label>
        <Frame VerticalOptions="Center" Grid.Row="2" Grid.Column="1" Padding="5">
            <Entry Keyboard="Numeric" x:Name="elect" FontSize="20" Placeholder="$"></Entry>
        </Frame>
        <Label VerticalOptions="Center" Grid.Row="2" Grid.Column="2" Text="billed monthly"></Label>


        <Label FontSize="15" VerticalOptions="Center" Grid.Row="3" Grid.Column="0" Text="Fuel Oil:"></Label>
        <Frame VerticalOptions="Center" Grid.Row="3" Grid.Column="1" Padding="5">
            <Entry Keyboard="Numeric" VerticalOptions="Center" FontSize="20" Grid.Row="3" Grid.Column="1" x:Name="oil" Placeholder="$"></Entry>
        </Frame>
        <Label VerticalOptions="Center" Grid.Row="3" Grid.Column="2" Text="billed monthly"></Label>


        <Label FontSize="15" VerticalOptions="Center" Grid.Row="4" Grid.Column="0" Text="Propane:"></Label>
        <Frame VerticalOptions="Center" Grid.Row="4" Grid.Column="1" Padding="5">
            <Entry Keyboard="Numeric" VerticalOptions="Center" FontSize="20" Grid.Row="4" Grid.Column="1" x:Name="propane" Placeholder="$"></Entry>
        </Frame>
        <Label VerticalOptions="Center" Grid.Row="4" Grid.Column="2" Text="billed monthly"></Label>
        

        <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" ColumnDefinitions="*,*" RowDefinitions="auto,auto">
            <Label FontSize="30" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" HorizontalOptions="Center" x:Name="poundsOfCarbon" Text="0"></Label>
            <Label FontSize="12" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalOptions="Center" x:Name="textForCarbon" Text="pounds of CO2 per year"></Label>

            <Label FontSize="30" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="Center" x:Name="treesOfCarbon" Text="0"></Label>
            <Label FontSize="12" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="Center" x:Name="textForTrees" Text="trees of carbon"></Label>
        </Grid>
        
        
    </Grid>
</ContentPage>