<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BananaProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BananaProject"
    xmlns:views="clr-namespace:BananaProject.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="SeaGreen"
    Shell.ForegroundColor="Green">


    <TabBar>
        <Tab Title="Posts" Icon="smile.png">
            <ShellContent ContentTemplate="{DataTemplate views:MessageBoard}" />
        </Tab>
        <Tab Title="Recycle?" Icon="recycle.png">
            <ShellContent ContentTemplate="{DataTemplate views:CameraPage}" />
        </Tab>
        <Tab Title="Events" Icon="calendar.png">
            <ShellContent ContentTemplate="{DataTemplate views:CameraPage}" />
        </Tab>
        <Tab Title="Footprint" Icon="tree.png">
            <ShellContent ContentTemplate="{DataTemplate views:CameraPage}" />
        </Tab>
    </TabBar>

</Shell>

